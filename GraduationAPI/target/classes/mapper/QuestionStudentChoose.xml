<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="buct.software.dao.QuestionStudentDao">
    <!--id对应的是dao中方法-->
    <insert id="chooseQuestion" parameterType="Map">
        insert into question_student(
          questionid,
          sno
        )values(
          #{questionid},
          #{sno}
        )
    </insert>

    <delete id="deleteQuestionStudent" parameterType="Map">
        delete from question_student where questionid = #{questionid} and sno = #{sno}
    </delete>

    <select id="getChoiceByQidSno" parameterType="Map" resultType="QuestionStudentChoose">
        select * from question_student where questionid = #{questionid} and sno = #{sno}
    </select>

    <select id="getQuestionOfStudent" parameterType="int" resultType="Question">
        select * from question where questionid in (
          select questionid from question_student where sno = #{sno}
        )
    </select>

</mapper>